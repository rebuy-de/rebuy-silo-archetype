<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
        name="base"
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <requiredProperties>
        <requiredProperty key="newrelicLicenseKey" />
        <requiredProperty key="team" />
        <requiredProperty key="databasePassword" />
        <requiredProperty key="databaseSchema" />
        <requiredProperty key="clientSecret" />
        <requiredProperty key="mailerRecipients">
            <validationRegex><![CDATA[^dl-scb-.*@rebuy\.com$]]></validationRegex>
        </requiredProperty>
        <requiredProperty key="rabbitmqPassword" />
    </requiredProperties>

    <fileSets>
        <fileSet encoding="UTF-8">
            <directory>doc</directory>
            <includes>
                <include>**/*.md</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory />
            <includes>
                <include>README.md</include>
                <include>.java-version</include>
                <include>Capfile</include>
                <include>Jenkinsfile</include>
            </includes>
        </fileSet>

        <fileSet encoding="UTF-8" filtered="true">
            <directory>deployment</directory>
        </fileSet>
    </fileSets>

    <modules>
        <module id="messages" dir="messages" name="messages">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>

        <module id="web" dir="web" name="web">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>

        <module id="silo" dir="silo" name="silo">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>*</include>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/test/resources</directory>
                    <includes>
                        <include>**/*</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
    </modules>
</archetype-descriptor>
